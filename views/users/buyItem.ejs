<% include ../partials/_head%>
<% include ../partials/_navbarUser%>

<h2 class="text-center my-4 mx-4"> Item Being Bought </h2>

<div class="container py-4">
	<div class="col-6 border offset-3">
	</div>
</div>

<div class="container">

		<form action="/users/cardverify/<%=showItem._id%>?_method=DELETE" method="POST" class="row">
		<div class="col-md-3 offset-2 mt-5">
			<h2 class="text-center mb-5"> Credit Card Info </h2>

			<div class="form-group">
				<label for="cardName">Name on Card</label>
				<input class="form-control" type="text" name="cardName" placeholder="ex)James Smith" required>
			</div>
			<div class="form-group">
				<label for="cardNumber">Card Number</label>
				<input class="form-control" type="number" name="cardNumber" placeholder="15 - 19 digit Number" required>
			</div>
			<div class="form-group">
				<label for="expDate">Expiration</label>
				<input class="form-control" type="month" name="expDate" min="2019-01" placeholder="YYYY-MM" required>
			</div>
			<div class="form-group">
				<label for="cvv">CVV</label>
				<input class="form-control" type="password" name="cvv" minlength="3" maxlength="3" placeholder="3 digit Number" required>
			</div>
		</div>

		<div class="col-md-4 offset-1 mt-5">
			<h2 class="text-center mb-5"> Delivery Info </h2>

			<div class="form-group">
				<label for="address">Address</label>
				<input type="text" name="address" class="form-control" placeholder="ex) 225 Bust St" required>
			</div>
			<div class="form-group">
				<label for="aptNumber">Apt#</label>
				<input type="text" name="aptNumber" class="form-control" placeholder="ex) 1" required>
			</div>
			<div class="form-group">
				<label for="city">City</label>
				<input type="text" name="city" class="form-control" placeholder="ex) San Francisco" required>
			</div>
			<div class="form-group">
				<label for="state">State</label>
			 	<input type="text" name="state" class="form-control" placeholder="ex) CA, California" required>
			</div>
			<div class="form-group">
				<label for="zip">Zip</label>
				<input type="number" name="zip" class="form-control" placeholder="ex) 94104" required>
			</div>
		</div>


		<div class="col-12 text-center mt-5">
				<button type="submit" class="btn-lg btn-primary">Place order</button>
		</div>

	</form>
</div>


<% include ../partials/_foot%>
