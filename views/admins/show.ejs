<% include ../partials/_head%>
<% include ../partials/_navbarAdmin%>

<main>
    <h1 class="text-center"><%= item.name %></h1>
    <div class="text-center">
      <img src="<%= item.imageUrl%>" height="300" width="300" class="rounded" alt="..."><br/>
      <div class="mt-3">
        Name : <%= item.name %><br/>
        Price : <%= item.price %><br/>
      </div>
    </div>
    <div class="cotainer">
    <div class="row">
      <div class="col-1 offset-5">
        <a href="/admins/<%=item._id%>/edit">Edit</a>
      </div>
      <div class="col-1">
        <form action="/admins/<%=item._id%>?_method=DELETE" method="POST">
          <button type="submit" name="button">Delete</button>
        </form>
      </div>
    </div>
  </div>
</main>

