<% include partials/_head%>

<%if(!foundUser.admin){%>
	<% include partials/_navbarUser%>
<%} else{%>
	<% include partials/_navbarAdmin%>
<%}%>

<main>
	<!-- Need to add items using adminController to view if this works or not -->

	<div class="text-center">
			<h2>Item list</h2>
	</div>
	<%for(let i = 0; i < allItems.length; i++) {%>
		<div class="row">
			<div class = "itemContainer col-2 offset-1 border border-primary">
				<div class="rounded" height="200" width="200">
					<img src="<%=allItems[i].imageUrl%>" height="180" width="180" class="rounded m-3">
				</div>
					<div class="itemInfo text-center">
						<h2><%=allItems[i].name%></h2>
						<h2>$ <%=allItems[i].price%></h2>

						<%if(!foundUser.admin){%>
							<a href="/users/<%=allItems[i]._id%>"> Info </a>
				 		<%}else{%>
							<a href="/admins/<%=allItems[i]._id%>"> Info </a>
				 		<%}%>
				</div>
			</div>
		</div>
		<%}%>
</main>


<% include partials/_foot%>
